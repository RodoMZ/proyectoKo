<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/background_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="709dp"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/alumno_n"
                android:textColor="@color/primary_text"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="213dp"
                android:layout_height="304dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:contentDescription="Mi trabajo"
                android:background="@drawable/round_shape"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/alumno_nombre"
                android:textColor="@color/primary_text"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/alumno_materia"
                android:textColor="@color/secondary_text"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/alumno_carrera"
                android:textColor="@color/secondary_text"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/whatsapp_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="WhatsApp"
                    android:elevation="4dp"
                    android:onClick="onIconClick"
                    android:padding="8dp"
                    android:src="@drawable/ic_whatsapp" />

                <ImageView
                    android:id="@+id/facebook_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Facebook"
                    android:elevation="4dp"
                    android:onClick="onIconClick"
                    android:padding="8dp"
                    android:src="@drawable/ic_facebook" />

                <ImageView
                    android:id="@+id/instagram_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Instagram"
                    android:elevation="4dp"
                    android:onClick="onIconClick"
                    android:padding="8dp"
                    android:src="@drawable/ic_instagram" />

                <ImageView
                    android:id="@+id/linkedin_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="LinkedIn"
                    android:elevation="4dp"
                    android:onClick="onIconClick"
                    android:padding="8dp"
                    android:src="@drawable/ic_linkedin" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>